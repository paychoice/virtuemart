<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment">
	<name>Paychoice</name>
	<creationDate>September 2012</creationDate>
	<author>Paychoice</author>
	<authorUrl>http://www.paychoice.com.au</authorUrl>
	<copyright>Copyright (C) Paychoice. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<version>2.0.11</version>
	<element>paychoice</element>
	<files><filename plugin="paychoice">paychoice.php</filename></files>
	<languages><language tag="en-GB">en-GB.plg_vmpayment_paychoice.ini</language></languages>

	
	<params addpath="/administrator/components/com_virtuemart/elements" />

	<params>		

		<param name="paychoice_test_request" type="radio" default="1" label="VMPAYMENT_PAYCHOICE_MODE" description="VMPAYMENT_PAYCHOICE_MODE_DESC">
			<option value="1">VMPAYMENT_PAYCHOICE_MODE_TEST</option>
			<option value="0">VMPAYMENT_PAYCHOICE_MODE_LIVE</option>
		</param>
		<param name="paychoice_username" type="text"  label="VMPAYMENT_PAYCHOICE_MERCHANT_ID" description="VMPAYMENT_PAYCHOICE_MERCHANT_ID_DESC" />
		<param name="paychoice_password" type="text"  label="VMPAYMENT_PAYCHOICE_MERCHANT_PASSWORD" description="VMPAYMENT_PAYCHOICE_MERCHANT_PASSWORD_DESC" />		
		<param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_PAYCHOICE_COUNTRIES_DESC" description="VMPAYMENT_PAYCHOICE_VALID_ZONES_DESC"/>		
		<param name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_PAYCHOICE_TAX" description="VMPAYMENT_PAYCHOICE_TAX_DESC" />
		<param type="spacer" default="" />
		<param type="spacer" default="http://www.paychoice.com.au" />		
	</params>

</install>
